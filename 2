with open('input/day6_1_test.txt') as f:
    numbers = []
    operators = []
    for line in f.readlines():
        if '+' in line:
            operators.append(line.split())
        else:
            numbers.append(line)

total = 0
cols = len(operators[0])
rows = len(numbers)
print(numbers, operators)
padding = [max([len(nums[col]) for nums in numbers])
           for col in range(cols)]
print(padding)

