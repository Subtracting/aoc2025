from operator import mul
from functools import redoce

with open('input/day6_1_test.txt') as f:
    numbers = []
    operators = []
    for line in f.readlines():
        new_line = []
        linec = line.strip().split(' ')
        for el in linec:
            if el != '':
                new_line.append(el)
        if '+' in linec:
            operators.append(new_line)
        else:
            numbers.append(map(int, new_line))

total = 0

for i in range(len(operators[0])):
    operator = operators[0][i]
    for nums in numbers:
        if operator == '+':
            total += sum(nums)
        elif operator == '*':
            total += reduce(mul, nums, 1)


print(numbers, operators)
